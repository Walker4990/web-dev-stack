<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="c">

<!-- 회원별 장바구니 목록 조회 -->
<select id="cart_list" parameterType="int" resultType="cart">
	select * from cart_view where m_idx = #{m_idx}
</select>
<!-- 회원별 장바구니 상품들의 총 금액 -->
<select id="cart_total_amount" parameterType="int" resultType="int">
	select NVL( sum( amount ), 0 ) total from cart_view where m_idx = #{m_idx}
</select>
<select id="cart_one" parameterType="cart" resultType="cart">
	select * from cart where idx = #{idx} and m_idx = #{m_idx}
</select>
<insert id="cart_insert" parameterType="cart">
	INSERT INTO cart 
	VALUES (seq_cart_idx.nextVal, 1, #{idx}, #{m_idx})
</insert>
</mapper>












